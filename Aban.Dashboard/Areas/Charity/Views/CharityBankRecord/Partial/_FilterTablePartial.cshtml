<div id="toggleAccordion">
    <div class="card">
        <a href="#filterPanel" role="menu" class="collapsed btn btn-success" style="margin-bottom:15px;" data-toggle="collapse" data-target="#defaultAccordionOne" aria-expanded="true" aria-controls="defaultAccordionOne">
            جستجو
            <i style="margin-right:5px;" class="fa fa-chevron-left" id="Icon"></i>
        </a>
        <div id="defaultAccordionOne" class="collapse" aria-labelledby="..." data-parent="#toggleAccordion">
            <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                <form class="section contact" asp-action="Index" method="get">

                    <div class="info">
                        <div class="row">
                            <div class="col-md-11 mx-auto">
                                <div class="row">

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>شرح سند </lable>
                                            <input id="description" name="description" value="@(ViewBag.description)" class="form-control mb-4 " type="text" />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>شماره برگه/واریز کننده </lable>
                                            <input id="paperNumber" name="paperNumber" value="@(ViewBag.paperNumber)" class="form-control mb-4 " type="text" />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>شماره سریال/شماره سند </lable>
                                            <input id="documentNumber" name="documentNumber" value="@(ViewBag.documentNumber)" class="form-control mb-4 " type="text" />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>حساب</label>
                                            <select name="charityAccountId" id="charityAccountId" class="form-control basic" asp-items="ViewBag.listCharityAccount">
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>بستانکار/واریزی </lable>
                                            <input id="creditor" name="creditor" value="@(ViewBag.creditor )" class="form-control mb-4 " type="text" />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>بدهکار/برداشت </lable>
                                            <input id="debtor" name="debtor" value="@(ViewBag.debtor )" class="form-control mb-4 " type="text" />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>تاریخ سند از </lable>
                                            <input id="documentRegisterDateTimeFrom" name="documentRegisterDateTimeFrom" value="@(ViewBag.documentRegisterDateTimeFrom != null ? $"{ViewBag.documentRegisterDateTimeFrom}":"" )" class="form-control mb-4 PersianDatePicker" type="text" readonly />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <lable>تا</lable>
                                            <input id="documentRegisterDateTimeTo" name="documentRegisterDateTimeTo" value="@(ViewBag.documentRegisterDateTimeTo != null ? $"{ViewBag.documentRegisterDateTimeTo}":"" )" class="form-control mb-4 PersianDatePicker" type="text" readonly />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>اندازه ی صفحه</lable>
                                            <select class="form-control mb-4" name="pageSize">
                                                <option value="10" id="10">10</option>
                                                <option value="25" id="25">25</option>
                                                <option value="50" id="50">50</option>
                                                <option value="100" id="100">100</option>
                                            </select>
                                            <span class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="row">

                                                <div class="col-md-6">

                                                    <lable></lable>
                                                    <button class="btn btn-success mb-2 btn-showloader" style="width:100%" type="submit">اعمال فیلتر</button>
                                                </div>

                                                <div class="col-md-6">
                                                    <lable></lable>
                                                    <a class="btn btn-danger mb-2 btn-showloader" href="@Url.Action("Index")" style="width:100%" id="clear">پاک کردن</a>

                                                </div>

                                            </div>
                                        </div>
                                        <input type="hidden" name="lastHeader" value="@ViewBag.lastColumn" />
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>

