@model Guarantee
<div class="ibox">
    <div class="ibox-content">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                <partial name="~/Views/Shared/Generic/_SaveAndCancelButton.cshtml" model="@("left")" />
                <br />
                <br />
            </div>
        </div>
        <div class="row">

            <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
<div role="form">
<div class="form-group">
<label asp-for="GuaranteeId"></label>
<select asp-for="GuaranteeId" asp-items="ViewBag.listGuaranteeId" class="chosen-select form-control">
