                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="form-group">
                            <label asp-for="Description"></label>
                            <textarea asp-for="Description" class="form-control"></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

<div class="col-md-12" style="float: left !important; margin-bottom: 15px;">
    <div class="text-left">
        <a style="cursor:pointer" class="btn btn-success mb-2 pr-5 pl-5 submit-form">ذخیره</a>
        <a class="btn btn-danger mb-2 btn-showloader" href="/Loans/UserAccountDepositWithdrawal/Index">انصراف</a>
    </div>
</div>