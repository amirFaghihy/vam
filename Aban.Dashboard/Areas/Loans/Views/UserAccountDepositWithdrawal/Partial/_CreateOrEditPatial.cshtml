                    <div role="form">
                    <div class="form-group">
                    <label asp-for="TransactionDateTime"></label>
                    <input id="TransactionDateTime" name="TransactionDateTimeString" type="text" class="form-control mb-4 PersianDatePicker" readonly value="تاریخ" />
                    <span asp-validation-for="TransactionDateTime" class="text-danger"></span>
                    </div>
                    </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <div role="form">
                    <div class="form-group">
                    <label class=""> ساعت </label>
                    <div class="input-group clockpicker" data-autoclose="true">
                    <input name="TransactionDateTimeTime" type="text" class="form-control" value="@Model.TransactionDateTime.ToString("HH:mm")" readonly>
                    <button type="button" class="input-group-addon btn-primary">
                    <i class="fa fa-clock-o"></i>
                    </button>
                    </div>
                    <span asp-validation-for="TransactionDateTime" class="text-danger"></span>
                    </div>
