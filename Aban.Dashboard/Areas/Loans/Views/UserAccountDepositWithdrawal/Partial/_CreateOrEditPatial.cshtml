@model UserAccountDepositWithdrawal
<div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
    <div class="info">
        <div class="r!importantw">
            <div class="col-md-11 mx-auto">
                <div class="row">

                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <div class="col-md-12" style="float: right !important; margin-bottom: 15px;">
                            <div class="text-right">
                                <a style="cursor:pointer" class="btn btn-success mb-2 pr-5 pl-5 submit-form">ذخیره</a>
                                <a class="btn btn-danger mb-2 btn-showloader" href="/Loans/UserAccountDepositWithdrawal/Index">انصراف</a>
                            </div>
                        </div>
                        <br />
                        <br />
                    </div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="IsDelete" />

                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <label asp-for="UserAccountId"></label>
                            <select asp-for="UserAccountId" asp-items="ViewBag.listUserAccount" class="form-control">
                                <option value="">انتخاب</option>
                            </select>
                            <span asp-validation-for="UserAccountId" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <label asp-for="Price"></label>
                            <input asp-for="Price" class="form-control" onkeyup="formatNumber(this.id, this.value)" value="@Model.Price.ToString("N0")" onclick="select()">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <label asp-for="AccountTransactionType"></label>
                            <select asp-for="AccountTransactionType" asp-items="ViewBag.listAccountTransactionType" class="form-control">
                                <option value="">انتخاب</option>
                            </select>
                            <span asp-validation-for="AccountTransactionType" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <label asp-for="AccountTransactionMethod"></label>
                            @{
                                // دریافت viewbag از کنترلر
                                var items = ViewBag.listAccountTransactionMethod as List<SelectListItem>;

                                #pragma warning disable CS8604
                                // پیدا کردن آیتم مورد نظر از لیست
                                var itemToRemove = items.FirstOrDefault(x => x.Value == "6");

                                // حذف آیتم مورد نظر از لیست
                                items.Remove(itemToRemove);

                            }
                            <select asp-for="AccountTransactionMethod" asp-items="items" class="form-control">
                                <option value="">انتخاب</option>
                            </select>
                            <span asp-validation-for="AccountTransactionMethod" class="text-danger"></span>
                        </div>
                    </div>



                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <label for="TransactionDateTimeString">تاریخ واریز/برداشت</label>
                            @{
                                var valueDate = (Model.TransactionDateTime != default ? Model.TransactionDateTime.ToConvertDateTimeToPersianDate() : DateTime.Now.ToConvertDateTimeToPersianDate());
                            }
                            <input name="TransactionDateTimeString" id="TransactionDateTimeString" value="@valueDate" type="text" class="form-control PersianDatePicker" />
                            <span asp-validation-for="TransactionDateTime" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <label for="TransactionTimeString">ساعت واریز/برداشت</label>
                            @{
                                var valueTime = (Model.TransactionDateTime != default ? Model.TransactionDateTime.ToString("HH:mm") : "00:00");
                            }
                            <input type="text" class="form-control clockPicker" id="TransactionTimeString" readonly="readonly" name="TransactionTimeString" value="@valueTime" />
                        </div>
                    </div>

                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                        <div class="form-group">
                            <label asp-for="TotalPriceAfterTransaction"></label>
                            <input asp-for="TotalPriceAfterTransaction" class="form-control" onchange="formatNumber(this.id, this.value)" value="@Model.TotalPriceAfterTransaction.ToString("N0")" onclick="select()" disabled readonly>
                            <span asp-validation-for="TotalPriceAfterTransaction" class="text-danger"></span>
                        </div>
                    </div>

