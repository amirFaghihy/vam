<div id="toggleAccordion">
    <div class="card">
        <a href="#filterPanel" role="menu" class="collapsed btn btn-success" style="margin-bottom:15px;" data-toggle="collapse" data-target="#defaultAccordionOne" aria-expanded="true" aria-controls="defaultAccordionOne">
            جستجو
            <i style="margin-right:5px;" class="fa fa-chevron-left" id="Icon"></i>
        </a>
        <div id="defaultAccordionOne" class="collapse" aria-labelledby="..." data-parent="#toggleAccordion">
            <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                <form class="section contact" asp-action="Index" method="get">

                    <div class="info">
                        <div class="row">
                            <div class="col-md-11 mx-auto">
                                <div class="row">

                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                        <div class="form-group">
                                            <label for="UserAccountId">حساب</label>
                                            <select name="UserAccountId" id="UserAccountId" asp-items="ViewBag.listUserAccount" class="form-control">
                                                <option value="">انتخاب</option>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                        <div role="form">
                                            <div class="form-group">
                                                <label class="col-sm-3 col-md-3 control-label">مبلغ</label>
                                                <input class="form-control" id="price" name="price" value="@ViewBag.price" />
                                                <span class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                        <div role="form">
                                            <div class="form-group">
                                                <label for="accountTransactionType">نوع تراکنش</label>
                                                <select class="form-control" id="accountTransactionType" asp-items="ViewBag.listAccountTransactionType" name="accountTransactionType">
                                                    <option value="">-- انتخاب --</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                        <div role="form">
                                            <div class="form-group">
                                                <label for="accountTransactionMethod">روش واریز/برداشت</label>
                                                <select class="form-control" id="accountTransactionMethod" asp-items="ViewBag.listAccountTransactionMethod" name="accountTransactionMethod">
                                                    <option value="">-- انتخاب --</option>
                                                </select>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                        <div role="form">
                                            <div class="form-group">
                                                <label for="transactionDateTimeFrom">تاریخ تراکنش از</label>
                                                <input id="transactionDateTimeFrom" name="transactionDateTimeFrom" value="@(ViewBag.transactionDateTimeFrom != null ? $"{ViewBag.transactionDateTimeFrom}":"" )" class="form-control mb-4 PersianDatePicker" type="text" />
                                            </div>
                                        </div>
                                    </div>

                                    <div class="col-sm-6 col-md-6 col-lg-6 col-xl-6">
                                        <div role="form">
                                            <div class="form-group">
                                                <label for="transactionDateTimeTo">تاریخ تراکنش تا</label>
                                                <input id="transactionDateTimeTo" name="transactionDateTimeTo" value="@(ViewBag.transactionDateTimeTo != null ? $"{ViewBag.transactionDateTimeTo}":"" )" class="form-control mb-4 PersianDatePicker" type="text" />
                                            </div>
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>تاریخ ثبت از </lable>
                                            <input id="registerDateFrom" name="registerDateFrom" value="@(ViewBag.registerDateFrom != null ? $"{ViewBag.registerDateFrom}":"" )" class="form-control mb-4 PersianDatePicker" type="text" />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div class="col-sm-6">
                                        <div class="form-group">
                                            <lable>تا</lable>
                                            <input id="registerDateTo" name="registerDateTo" value="@(ViewBag.registerDateTo != null ? $"{ViewBag.registerDateTo}":"" )" class="form-control mb-4 PersianDatePicker" type="text" />
                                            <span class="text-danger"></span>
                                        </div>
                                    </div>


                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <lable>اندازه ی صفحه</lable>
                                            <select class="form-control mb-4" name="pageSize">
                                                <option value="10" id="10">10</option>
                                                <option value="25" id="25">25</option>
                                                <option value="50" id="50">50</option>
                                                <option value="100" id="100">100</option>
                                            </select>
                                            <span class="text-danger"></span>

                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label></label>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label></label>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="row">

                                                <div class="col-md-6">

                                                    <lable></lable>
                                                    <button class="btn btn-success mb-2 btn-showloader" style="width:100%" type="submit">اعمال فیلتر</button>
                                                </div>

                                                <div class="col-md-6">
                                                    <lable></lable>
                                                    <a class="btn btn-danger mb-2 btn-showloader" href="@Url.Action("Index")" style="width:100%" id="clear">پاک کردن</a>

                                                </div>

                                            </div>
                                        </div>
                                        <input type="hidden" name="lastHeader" value="@ViewBag.lastColumn" />
                                    </div>

                                </div>

                            </div>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>
