@model X.PagedList.IPagedList<UserAccountDepositWithdrawal>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    Aban.ViewModel.BreadCrumb breadCrumb = new Aban.ViewModel.BreadCrumb();
    breadCrumb.PageTitle = "واریز/براشت ها";
    breadCrumb.Title = "واریز/براشت ها";

    breadCrumb.Links = new List<string[]> { new string[2] { Url.Action("Index"), breadCrumb.PageTitle } };

}
@await Html.PartialAsync("~/Views/Shared/Generic/_BreadCrumb.cshtml", breadCrumb)



<div class="row layout-top-spacing">
    <div class="col-lg-12 col-12 layout-spacing">
        <div class="statbox widget box box-shadow">

            <partial name="./Partial/_FilterTablePartial" />

            @await Html.PartialAsync("~/Views/Shared/Generic/_CreateButtonWithPageSize.cshtml", "واریز/برداشت جدید")
            <div class="table-responsive text-center">
                <table class="table table-bordered table-hover mb-4">
                    <thead>
                        <tr>

                            <th style="width: 162px;">@Html.ActionLink("کد", "Index", "UserAccountDepositWithdrawal", new {userAccountId = ViewBag.userAccountId , price = ViewBag.price , totalPriceAfterTransaction = ViewBag.totalPriceAfterTransaction , accountTransactionType = ViewBag.accountTransactionType , transactionDateTime = ViewBag.transactionDateTime , registerDate = ViewBag.registerDate ,  sortColumn = "Id", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "Id" })</th>
                            <th style="width: 162px;">@Html.ActionLink("حساب", "Index", "UserAccountDepositWithdrawal", new {userAccountId = ViewBag.userAccountId , price = ViewBag.price , totalPriceAfterTransaction = ViewBag.totalPriceAfterTransaction , accountTransactionType = ViewBag.accountTransactionType , transactionDateTime = ViewBag.transactionDateTime , registerDate = ViewBag.registerDate ,  sortColumn = "UserAccountId", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "UserAccountId" })</th>
                            <th style="width: 162px;">@Html.ActionLink("مبلغ واریز/برداشت", "Index", "UserAccountDepositWithdrawal", new {userAccountId = ViewBag.userAccountId , price = ViewBag.price , totalPriceAfterTransaction = ViewBag.totalPriceAfterTransaction , accountTransactionType = ViewBag.accountTransactionType , transactionDateTime = ViewBag.transactionDateTime , registerDate = ViewBag.registerDate ,  sortColumn = "Price", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "Price" })</th>
                            <th style="width: 162px;">@Html.ActionLink("مانده بعد از تراکنش", "Index", "UserAccountDepositWithdrawal", new {userAccountId = ViewBag.userAccountId , price = ViewBag.price , totalPriceAfterTransaction = ViewBag.totalPriceAfterTransaction , accountTransactionType = ViewBag.accountTransactionType , transactionDateTime = ViewBag.transactionDateTime , registerDate = ViewBag.registerDate ,  sortColumn = "TotalPriceAfterTransaction", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "TotalPriceAfterTransaction" })</th>
                            <th style="width: 162px;">@Html.ActionLink("واریز/برداشت", "Index", "UserAccountDepositWithdrawal", new {userAccountId = ViewBag.userAccountId , price = ViewBag.price , totalPriceAfterTransaction = ViewBag.totalPriceAfterTransaction , accountTransactionType = ViewBag.accountTransactionType , transactionDateTime = ViewBag.transactionDateTime , registerDate = ViewBag.registerDate ,  sortColumn = "AccountTransactionType", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "AccountTransactionType" })</th>
                            <th style="width: 162px;">@Html.ActionLink("تاریخ تراکنش", "Index", "UserAccountDepositWithdrawal", new {userAccountId = ViewBag.userAccountId , price = ViewBag.price , totalPriceAfterTransaction = ViewBag.totalPriceAfterTransaction , accountTransactionType = ViewBag.accountTransactionType , transactionDateTime = ViewBag.transactionDateTime , registerDate = ViewBag.registerDate ,  sortColumn = "TransactionDateTime", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "TransactionDateTime" })</th>
                            <th style="width: 162px;">@Html.ActionLink("تاریخ ثبت", "Index", "UserAccountDepositWithdrawal", new {userAccountId = ViewBag.userAccountId , price = ViewBag.price , totalPriceAfterTransaction = ViewBag.totalPriceAfterTransaction , accountTransactionType = ViewBag.accountTransactionType , transactionDateTime = ViewBag.transactionDateTime , registerDate = ViewBag.registerDate ,  sortColumn = "RegisterDate", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "RegisterDate" })</th>

                            <th style="width: 162px;">عملیات</th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.UserAccountId </td>
                            <td>@item.Price </td>
                            <td>@item.TotalPriceAfterTransaction </td>
                            <td>@item.AccountTransactionType </td>
                            <td>
                                @Html.ConvertPersianDateTime(item.TransactionDateTime)
                            </td>
                            <td>
                                @Html.ConvertPersianDateTime(item.RegisterDate)
                            </td>

                            <td>
                                <div class="input-group-append button-center">
                                    <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button" aria-expanded="false">عملیات </button>
                                    <ul class="dropdown-menu float-right" x-placement="bottom-start" style="text-align:right;position: absolute; top: 35px; left: 1243px; will-change: top, left;">
                                        <li><a href="@Url.Action("Edit", new { id = item.Id })"><span class="fa fa-edit"></span> ویرایش</a></li>
                                        @*<li><a href="@Url.Action("Delete", new { id = item.Id })" onclick="return confirm('آیا اطمینان دارید ؟');"><span class="fa fa-remove"></span> حذف</a></li>*@
                                    </ul>
                                </div>
                            </td>
                        </tr>
                    }
                    <tfoot>
                        <tr>
                            <th style="width: 162px;">کد</th>
                            <th style="width: 162px;">حساب</th>
                            <th style="width: 162px;">مبلغ واریز/برداشت</th>
                            <th style="width: 162px;">مانده بعد از تراکنش</th>
                            <th style="width: 162px;">واریز/برداشت</th>
                            <th style="width: 162px;">تاریخ تراکنش</th>
                            <th style="width: 162px;">تاریخ ثبت</th>

                            <th>عملیات</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
            <partial name="./Partial/_PaginationCount" model="new PaginationInfo(Model)" />

        </div>
    </div>
</div>

@section Styles{
    <link href="~/plugins/select2/select2.min.css" rel="stylesheet" />
}

    @section Scripts{
    <script src="~/plugins/select2/select2.min.js"></script>

    <script>

        $("#UserAccountId").select2({
            tags: true,
        }).data('select2').$dropdown.addClass('class23');
        
        $("#accountTransactionType").select2({
            tags: true,
        }).data('select2').$dropdown.addClass('class23');


        $("#accountTransactionMethod").select2({
            tags: true,
        }).data('select2').$dropdown.addClass('class58');
    </script>
    }