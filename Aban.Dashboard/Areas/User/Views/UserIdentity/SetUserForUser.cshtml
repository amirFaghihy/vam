@model UserIdentityViewModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    Aban.ViewModel.BreadCrumb breadCrumb = new Aban.ViewModel.BreadCrumb();
    breadCrumb.Title = "افزودن";
    breadCrumb.PageTitle = "افزودن";

    breadCrumb.Links = new List<string[]>
{
#pragma warning disable CS8601 // Possible null reference assignment.
    new string[2]{Url.Action("Index"),"صفحه اصلی" }
#pragma warning disable CS8601 // Possible null reference assignment.
    };
}

@await Html.PartialAsync("~/Views/Shared/Generic/_BreadCrumb.cshtml", breadCrumb)


<div class="row layout-top-spacing">
    <div class="col-lg-12 col-12 layout-spacing">
        <div class="statbox widget box box-shadow">
            <form asp-area="User" asp-controller="UserIdentity" asp-action="SetUserForUser" enctype="multipart/form-data" method="post" class="section contact">
                <fieldset>
                    <div class="col-xl-12 col-lg-12 col-md-12 layout-spacing">
                        <div class="info">
                            <div class="r!importantw">
                                <div class="col-md-11 mx-auto">
                                    <div class="row">

                                        @Html.AntiForgeryToken()

                                        <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                                            <partial name="~/Views/Shared/Generic/_SaveAndCancelButton.cshtml" model="@("right")" />
                                            <br />
                                            <br />
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>کاربر اول (سرکاربر/منشی)</label>
                                                <select id="userId1" name="userId1" asp-items="ViewBag.userIdentityList1" class="form-control">
                                                </select>
                                            </div>
                                        </div>

                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label>منتصب به (منشی/خیّر)</label>
                                                <select id="userId2" name="userId2" asp-items="ViewBag.userIdentityList2" class="form-control">
                                                </select>
                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <partial name="~/Views/Shared/Generic/_SaveAndCancelButton.cshtml" model="@("left")" />
                </fieldset>
            </form>
        </div>
    </div>
</div>

@section Styles{
    <link href="~/plugins/select2/select2.min.css" rel="stylesheet" />
}

    @section Scripts{
    <script src="~/plugins/select2/select2.min.js"></script>

    <script>

        $("#userId1").select2({
            tags: true,
        }).data('select2').$dropdown.addClass('class23');


        $("#userId2").select2({
            tags: true,
        }).data('select2').$dropdown.addClass('class58');
    </script>
}
