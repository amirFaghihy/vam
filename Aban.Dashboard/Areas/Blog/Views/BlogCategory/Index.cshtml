@model X.PagedList.IPagedList<BlogCategory>


@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    Aban.ViewModel.BreadCrumb breadCrumb = new Aban.ViewModel.BreadCrumb();
    breadCrumb.PageTitle = "دسته بندی بلاگ";
    breadCrumb.Title = "دسته بندی بلاگ";

    breadCrumb.Links = new List<string[]> { new string[2] { Url.Action("Index"), breadCrumb.PageTitle } };

}
@await Html.PartialAsync("~/Views/Shared/Generic/_BreadCrumb.cshtml", breadCrumb)



<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                @using (Html.BeginForm("Index", "BlogCategory", FormMethod.Get, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
                {
                    <partial name="_FilterTablePartial" />
                }
            </div>
            <div class="ibox-content">
                @await Html.PartialAsync("~/Views/Shared/Generic/_CreateButtonWithPageSize.cshtml", "")
                <div class="table-responsive text-center">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th style="width: 162px;">@Html.ActionLink("کد", "Index", "BlogCategory", new {userIdentity = ViewBag.userIdentity , parent = ViewBag.parent , title = ViewBag.title , isvisible = ViewBag.isvisible , blogCategoryURL = ViewBag.blogCategoryURL ,  sortColumn = "Id", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "Id" })</th>
                                <th style="width: 162px;">@Html.ActionLink("شناسه ثبت کننده", "Index", "BlogCategory", new {userIdentity = ViewBag.userIdentity , parent = ViewBag.parent , title = ViewBag.title , isvisible = ViewBag.isvisible , blogCategoryURL = ViewBag.blogCategoryURL ,  sortColumn = "UserIdentity", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "UserIdentity" })</th>
                                <th style="width: 162px;">@Html.ActionLink("شناسه پدر", "Index", "BlogCategory", new {userIdentity = ViewBag.userIdentity , parent = ViewBag.parent , title = ViewBag.title , isvisible = ViewBag.isvisible , blogCategoryURL = ViewBag.blogCategoryURL ,  sortColumn = "Parent", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "Parent" })</th>
                                <th style="width: 162px;">@Html.ActionLink("عنوان", "Index", "BlogCategory", new {userIdentity = ViewBag.userIdentity , parent = ViewBag.parent , title = ViewBag.title , isvisible = ViewBag.isvisible , blogCategoryURL = ViewBag.blogCategoryURL ,  sortColumn = "Title", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "Title" })</th>
                                <th style="width: 162px;">@Html.ActionLink("نمایش؟", "Index", "BlogCategory", new {userIdentity = ViewBag.userIdentity , parent = ViewBag.parent , title = ViewBag.title , isvisible = ViewBag.isvisible , blogCategoryURL = ViewBag.blogCategoryURL ,  sortColumn = "IsVisible", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "IsVisible" })</th>
                                <th style="width: 162px;">@Html.ActionLink("آدرس", "Index", "BlogCategory", new {userIdentity = ViewBag.userIdentity , parent = ViewBag.parent , title = ViewBag.title , isvisible = ViewBag.isvisible , blogCategoryURL = ViewBag.blogCategoryURL ,  sortColumn = "BlogCategoryURL", isDesc = ViewBag.isDesc, lastColumn = ViewBag.lastColumn, pageNumber = ViewBag.pageNumber, pageSize = ViewBag.pageSize }, new { @id = "BlogCategoryURL" })</th>

                                <th style="width: 162px;">عملیات</th>
                            </tr>
                        </thead>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.UserIdentity?.FirstName @item.UserIdentity?.LastName</td>
                                <td>@item.Parent </td>
                                <td>@item.Title </td>
                                <td>
                                    <i class="fa fa-@(((bool)item.IsVisible) ? "check isVisible" : "times isHidden")"></i>
                                </td>
                                <td>@item.BlogCategoryURL </td>

                                <td>
                                    <div class="input-group-append button-center">
                                        <button data-toggle="dropdown" class="btn btn-white dropdown-toggle" type="button" aria-expanded="false">عملیات </button>
                                        <ul class="dropdown-menu float-right dropdown-menu-rtl" x-placement="bottom-start" style="text-align:right;position: absolute; will-change: top, left;">
                                            <li><a href="@Url.Action("Edit", new { id = item.Id })"><span class="fa fa-edit"></span> ویرایش</a></li>
                                            @*<li><a href="@Url.Action("Delete", new { id = item.Id })" onclick="return confirm( @Aban.Resource.Layout.Layout.AreYouSure);"><span class="fa fa-remove"></span> @Ably.Resource.Layout.Layout.DeleteButton</a></li>*@
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                        <tfoot>
                            <tr>
                                <th style="width: 162px;">کد</th>
                                <th style="width: 162px;">شناسه ثبت کننده</th>
                                <th style="width: 162px;">شناسه پدر</th>
                                <th style="width: 162px;">عنوان</th>
                                <th style="width: 162px;">نمایش؟</th>
                                <th style="width: 162px;">آدرس</th>

                                <th>عملیات</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
                <partial name="_PaginationCount" model="new PaginationInfo(Model)" />
            </div>
        </div>
    </div>
</div>
